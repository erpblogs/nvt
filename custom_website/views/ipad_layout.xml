<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="custom_website.ipad_template" name="Ipad">
        <t t-call="website.layout">
            <div id="wrap" class="js_product_category">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="#">MacBook
                                        Air</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">MacBook Pro</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">iMac</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Mac mini</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Mac Studio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Mac Pro</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <section class="bg-light">
                    <div class="container highlight-product">
                        <div class="row row-cols-auto">
                            <t t-set="qty" t-value="20" />
                            <t t-foreach="range(qty)" t-as="item">
                                <div class="col cell-item product col-md-3">
                                    <t t-call="custom_website.product_layout">
                                        <t t-set="item_no" t-value="item" />
                                    </t>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>

                <section class="bg-light loadmore-btn">
                    <div class="container d-flex justify-content-center product-load py-5">
                        <button class="btn btn-primary">
                            Load more 20 products
                        </button>
                    </div>

                </section>

            </div>
        </t>

    </template>


    <record id="custom_website.ipad_page" model="website.page">
        <field name="is_published">True</field>
        <field name="url">/ipad</field>
        <field name="view_id" ref="custom_website.ipad_template" />
        <field name="track">True</field>
    </record>

    <record id="website_menu_ipad" model="website.menu">
        <field name="name">iPad</field>
        <field name="url">/ipad</field>
        <field name="page_id" ref="custom_website.ipad_page" />
        <field name="parent_id" ref="website.main_menu" />
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="website.default_website" />
    </record>


</odoo>