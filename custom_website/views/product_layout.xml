<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="custom_website.product_layout"
        name="Homepage Product carousel Layout">
        <div class="highlight-product-shadow product-item">
            <div class="product-item-layout">
                <a href="#">
                    <img src="/custom_website/static/src/images/imac.png" class="d-block"
                        alt="Product Alt"></img>
                </a>
                <div class="product-title">
                    <span><b>iMac M1 2021 24 inch</b> (8 Core GPU/8GB/512GB) </span> - <span
                        t-esc="item_no + 1"></span>
                </div>
                <div class="product-config">
                    <span class="col-auto">24 inch</span>
                    <span class="col-auto">M1</span>
                    <span class="col-auto">8GB RAM</span>
                    <span class="col-auto">512GB</span>
                </div>
            </div>
        </div>
    </template>

    <template id="custom_website.macbook_template" name="Mac">
        <t t-call="website.layout">
            <div id="wrap" class="js_product_category">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="#">MacBook
                                        Air</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">MacBook Pro</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">iMac</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Mac mini</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Mac Studio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Mac Pro</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <section class="bg-light">
                    <div class="container highlight-product">
                        <div class="row">
                            <t t-set="qty" t-value="20" />
                            <t t-foreach="range(qty)" t-as="item">
                                <div class="col-12 col-md-6 col-lg-4 col-xl-3 cell-item product">
                                    <t t-call="custom_website.product_layout">
                                        <t t-set="item_no" t-value="item" />
                                    </t>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>

                <section class="bg-light loadmore-btn">
                    <div class="container d-flex justify-content-center product-load py-5">
                        <button class="btn btn-primary">
                            Load more 20 products
                        </button>
                    </div>

                </section>

            </div>
        </t>

    </template>


    <record id="custom_website.macbook_page" model="website.page">
        <field name="is_published">True</field>
        <field name="url">/macbook</field>
        <field name="view_id" ref="custom_website.macbook_template" />
        <field name="track">True</field>
    </record>

    <record id="website_menu_mac" model="website.menu">
        <field name="name">Mac</field>
        <field name="url">/macbook</field>
        <field name="page_id" ref="custom_website.macbook_page" />
        <field name="parent_id" ref="website.main_menu" />
        <field name="sequence" type="int">1</field>
        <field name="website_id" ref="website.default_website" />
    </record>


</odoo>