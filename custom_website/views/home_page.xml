<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('model', '=', 'website.page'), ('name', '=', 'homepage_page')]" />
        </function>
        <value eval="{'noupdate': False}" />
    </function>

    <data noupdate="0">


        <record id="website.homepage_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/</field>
            <field name="view_id" ref="website.homepage" />
            <field name="track">True</field>
        </record>


        <template id="custom_website.homepage_banner" name="Homepage banner">
            <section class="col-12 homepage-section homepage-banner bg-black text-white">
                <div class="btn homepage-banner-buy">
                    <!-- <a href="#">Buy Now</a> -->
                </div>
            </section>
        </template>

        <template id="custom_website.homepage_highlight_product_carousel"
            name="Homepage Product carousel Layout">
            <div class="highlight-product-shadow highlight-product-carousel-item">
                <div class="highlight-product-carousel-item-layout">
                    <div class="product-title">
                        <span><b>iMac M1 2021 24 inch</b> (8 Core GPU/8GB/512GB) </span> - <span
                            t-esc="item_no + 1"></span>
                    </div>
                    <img src="/custom_website/static/src/images/imac.png" class="d-block"
                        alt="Product Alt"></img>
                    <div class="highlight-product-carousel-config">
                        <span class="col-auto">24 inch</span>
                        <span class="col-auto">M1</span>
                        <span class="col-auto">8GB RAM</span>
                        <span class="col-auto">512GB</span>
                    </div>
                </div>
            </div>
        </template>

        <template id="custom_website.homepage_highlight_product" name="Homepage Product Highlight">
            <section class="container homepage-section highlight-product bg-light">
                <div class="cell-item highlight-product-banner">
                    <div
                        class="highlight-product-shadow text-center highlight-product-banner-img">
                        <span class="Highlight">Highlight</span>
                        <span class="Product">Product</span>
                    </div>
                </div>
                <t t-set="qty" t-value="10" />
                <t t-foreach="range(qty)" t-as="item">
                    <div class="cell-item highlight-product-carousel">
                        <t t-call="custom_website.homepage_highlight_product_carousel">
                            <t t-set="item_no" t-value="item" />
                        </t>
                    </div>
                </t>
                <div class="cell-item  highlight-product-banner">

                </div>
                <button class="carousel-control-prev" type="button" id="prevBtn"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" id="nextBtn"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </section>
        </template>

        <template id="custom_website.homepage_category_line" name="Homepage category_line">
            <section class="homepage-section highlight-category-line bg-light">
                <div class="d-flex justify-content-center gap-4">
                    <div class="d-flex gap-2 flex-column align-items-center">
                        <img class="highlight-category-line-img"
                            src="/custom_website/static/src/images/categ-line-mac.png"
                        />
                        <span class="highlight-category-line-title">Mac</span>
                    </div>
                    <div class="d-flex  gap-2 flex-column align-items-center">
                        <img class="highlight-category-line-img"
                            src="/custom_website/static/src/images/categ-line-phone.png"
                        />
                        <span class="highlight-category-line-title">Iphone</span>
                    </div>
                    <div class="d-flex  gap-2 flex-column align-items-center">
                        <img class="highlight-category-line-img"
                            src="/custom_website/static/src/images/categ-line-ipad.png"
                        />
                        <span class="highlight-category-line-title">Ipad</span>
                    </div>
                    <div class="d-flex gap-2 flex-column align-items-center">
                        <img class="highlight-category-line-img"
                            src="/custom_website/static/src/images/categ-line-watch.png"
                        />
                        <span class="highlight-category-line-title">Apple Watch</span>
                    </div>
                    <div class="d-flex gap-2 flex-column align-items-center">
                        <img class="highlight-category-line-img"
                            src="/custom_website/static/src/images/categ-line-airpods.png"
                        />
                        <span class="highlight-category-line-title">Airpods</span>
                    </div>

                </div>
            </section>
        </template>

        <template id="custom_website.homepage_category_card" name="Homepage category_card">
            <section class="col-12  homepage-section highlight-category-card bg-light">
                Category 1 Content
            </section>
        </template>
        <template id="custom_website.homepage_contact" name="Homepage Contact">
            <section class="col-12  homepage-section highlight-category-card bg-light">
                Category 1 Content
            </section>
        </template>

        <template id="custom_website_homepage" inherit_id="website.homepage" name="Home">
            <xpath expr="//div[@id='wrap']" position="replace">
                <!-- <div id="wrap" class="oe_structure oe_empty"/> -->
                <div id="wrap">
                    <div class="container-fluid">
                        <div class="row custom_home_page">
                            <t t-call="custom_website.homepage_banner" />
                            <t t-call="custom_website.homepage_highlight_product" />
                            <t t-call="custom_website.homepage_category_line" />
                            <t t-call="custom_website.homepage_category_card" />
                            <t t-call="custom_website.homepage_contact" />
                        </div>
                    </div>

                </div>
            </xpath>
        </template>

    </data>
    bn </odoo>