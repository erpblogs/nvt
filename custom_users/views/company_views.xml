<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- res.company tree view -->
	<record id="res_company_view_tree" model="ir.ui.view">
		<field name="name">res.company.view.tree</field>
		<field name="model">res.company</field>
		<field name="arch" type="xml">
			<tree string="partner company tree" multi_edit="1">
				<!-- Add your fields here -->
				<field name="name" />
				<field name="phone" />
				<field name="email" />
				<field name="web_company" groups="base.group_system" column_invisible="True"/>
			</tree>
		</field>
	</record>

	<record id="action_partner_company" model="ir.actions.act_window">
		<field name="name">Companies</field>
		<field name="res_model">res.company</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{'default_web_company': True}</field>
		<field name="domain">[('web_company', '=', True)]</field>
	</record>

	<!-- <record id="action_company_contacts_view_kanban" model="ir.actions.act_window.view">
		<field name="sequence" eval="0" />
		<field name="view_mode">kanban</field>
		<field name="view_id" ref="" />
		<field name="act_window_id" ref="action_partner_company" />
	</record> -->
	<record id="action_company_contacts_view_tree" model="ir.actions.act_window.view">
		<field name="sequence" eval="1" />
		<field name="view_mode">tree</field>
		<field name="view_id" ref="res_company_view_tree" />
		<field name="act_window_id" ref="action_partner_company" />
	</record>
	<!-- <record id="action_company_contacts_view_form" model="ir.actions.act_window.view">
		<field name="sequence" eval="2" />
		<field name="view_mode">form</field>
		<field name="view_id" ref="" />
		<field name="act_window_id" ref="action_partner_company" />
	</record> -->
	
	<menuitem name="Companies" id="menu_portal_company" sequence="30"
		parent="custom_users.menu_root"
		groups="custom_users.group_user_account_manager" />

	<menuitem name="List" id="custom_users.menu_partner_company_list"
		parent="menu_portal_company"
		action="action_partner_company" />

</odoo>